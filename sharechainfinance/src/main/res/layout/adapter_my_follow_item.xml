<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_follow_item_rl"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/my_follow_Image_ll"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical">

        <ImageView
            android:id="@+id/my_follow_Image_iv"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_alignParentLeft="true"
            android:paddingLeft="15dp"
            android:src="@drawable/follow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/my_follow_Image_ll"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/my_follow_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLength="10"
            android:text="我是大佬"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />


        <TextView
            android:layout_marginLeft="15dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:id="@+id/my_follow_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_follow_Image_ll"
            android:text="微博名"
            android:textColor="@color/about_font"
            android:textSize="12sp" />


        <TextView
            android:visibility="visible"
            android:padding="3dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:background="@drawable/mogul_follow_bg"
            android:id="@+id/my_follow_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/my_follow_Image_ll"
            android:text="未来财经ceo"
            android:textColor="@color/tint_home_color"
            android:textSize="11sp" />

        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
