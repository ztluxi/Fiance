<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical">

    <include layout="@layout/base_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/feedback_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/submit_btn"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/content_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/mine_center_bg"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/write_feedback_et"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_alignLeft="@+id/content_ll"
                        android:layout_alignStart="@+id/content_ll"
                        android:layout_alignTop="@+id/content_ll"
                        android:background="@null"
                        android:gravity="left"
                        android:hint="@string/feedback_one"
                        android:maxLength="300"
                        android:padding="10dp"
                        android:textColor="@color/about_font"
                        android:textColorHint="@color/about_font"
                        android:textSize="15sp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:gravity="right"
                        android:hint="0/300"
                        android:textColorHint="@color/about_font"
                        android:textSize="12sp" />
                </LinearLayout>

                <EditText
                    android:id="@+id/phone_et"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_below="@+id/write_feedback_et"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/mine_center_bg"
                    android:hint="@string/feedback_two"
                    android:paddingLeft="10dp"
                    android:textColor="@color/about_font"
                    android:textColorHint="@color/about_font"
                    android:textSize="15sp" />

            </LinearLayout>

            <Button
                android:layout_marginBottom="10dp"
                android:id="@+id/submit_btn"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_below="@+id/content_ll"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/feedback_sumbit_bg"
                android:onClick="sendMessage"
                android:text="@string/submit" />
        </RelativeLayout>
    </ScrollView>

</LinearLayout>