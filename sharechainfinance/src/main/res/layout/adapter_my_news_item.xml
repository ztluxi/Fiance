<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="82dp"
    android:background="@color/white"
    android:orientation="horizontal"
    android:id="@+id/my_news_item_rl">

    <ImageView
        android:layout_alignParentLeft="true"
        android:paddingLeft="15dp"
        android:id="@+id/my_news_Image_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/my_news"
         />

    <LinearLayout
        android:layout_toRightOf="@+id/my_news_Image_iv"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_marginLeft="15dp"
            android:lines="1"
            android:maxLength="20"
            android:textSize="15sp"
            android:id="@+id/my_news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有大佬回复您的消息"
            android:textColor="@color/colorBlack"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/my_news_Image_iv" />

        <TextView
            android:layout_marginTop="5dp"
            android:textSize="11sp"
            android:layout_marginLeft="15dp"
            android:id="@+id/my_news_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-07-12"
            android:textColor="@color/about_font"
             />
    </LinearLayout>

</RelativeLayout>
