<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_bg_color"
    android:orientation="vertical">

    <include layout="@layout/base_title" />


    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id="@+id/follow_search_ll"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/search_et"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@drawable/mine_center_bg"
            android:drawableLeft="@drawable/search"
            android:drawablePadding="7dp"
            android:gravity="center|left"
            android:hint="大佬大"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textColor="@color/about_font"
            android:textColorHint="@color/about_font"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/base_bg_color"
            android:gravity="center"
            android:onClick="onClick"
            android:paddingLeft="12dp"
            android:paddingRight="13dp"
            android:text="@string/cancel"
            android:textColor="@color/colorBlack"
            android:textSize="14sp" />

    </LinearLayout>



    <com.andview.refreshview.XRefreshView
        android:visibility="visible"
        android:id="@+id/xrefreshview_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ListView
            android:id="@+id/my_news_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
        </ListView>
    </com.andview.refreshview.XRefreshView>


    <RelativeLayout
        android:id="@+id/no_result_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/no_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="108dp"
            android:text="没有这个大佬"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_below="@+id/no_result"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="12dp"
            android:text="要不换个试试?"
            android:textColor="@color/about_font" />

    </RelativeLayout>

</LinearLayout>
