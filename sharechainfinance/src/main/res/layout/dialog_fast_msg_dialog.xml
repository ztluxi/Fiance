<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="21dp"
    android:paddingRight="21dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/share_dialog_image_height"
            android:layout_gravity="center"
            android:layout_marginTop="35dp"
            android:background="@drawable/icon_share_blue_bg"
            android:gravity="center"
            android:text="重磅快讯"
            android:textColor="@color/white"
            android:textSize="42.6sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="21dp"
            android:background="@drawable/common_white_round_bg"
            android:orientation="vertical"
            android:paddingLeft="@dimen/share_dialog_padding_left"
            android:paddingRight="@dimen/share_dialog_padding_left">

            <TextView
                android:id="@+id/text_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/share_dialog_margin_top"
                android:layout_marginTop="@dimen/share_dialog_margin_top"
                android:drawableLeft="@drawable/icon_share_time"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="星期一 2017----"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:text="星期一 2017----星期一 星期一星期一星星期一 2017----星期一 星期一星期一星星期一 2017----星期一 星期一星期一星期一2017----星期一 2017----星期一 2017----"
                        android:textColor="@android:color/black"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/text_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/share_dialog_margin_top"
                        android:gravity="center_vertical"
                        android:lines="1"
                        android:text="Via:未来财经"
                        android:textColor="@android:color/black"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/share_dialog_margin_top"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/image_qrcode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/icon_share_qrcode" />

                        <TextView
                            android:id="@+id/text_uid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="来自未来财经\n
UID1233"
                            android:textColor="@android:color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/share_dialog_margin_top"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="分享至"
                android:textColor="@android:color/black"
                android:textSize="12sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/share_dialog_share_margin_top"
                android:layout_marginTop="@dimen/share_dialog_share_margin_top"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_weixin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_share_weixin" />

                <ImageView
                    android:id="@+id/image_circle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_share_circle" />

                <ImageView
                    android:id="@+id/image_download"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/icon_share_download" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/image_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:src="@drawable/icon_share_delete" />

</LinearLayout>