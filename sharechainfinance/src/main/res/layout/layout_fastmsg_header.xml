<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/icon_fastmsg_header_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/big_msg"
        android:textColor="@color/white"
        android:textSize="19sp" />

    <View
        android:layout_width="23dp"
        android:layout_height="3dp"
        android:layout_marginTop="14dp"
        android:background="@color/white" />

    <TextView
        android:gravity="center"
        android:id="@+id/text_big_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="14dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2"
        android:maxLines="2"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btn_view_detail"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/common_fastmsg_detail_bg"
        android:gravity="center"
        android:text="@string/view_detail"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:visibility="gone" />

</LinearLayout>