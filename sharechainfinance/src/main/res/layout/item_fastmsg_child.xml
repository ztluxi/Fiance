<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_marginLeft="12dp"
        android:layout_width="18dp"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

        <View
            android:layout_width="1dp"
            android:layout_height="17dp"
            android:background="#dadada" />

        <ImageView
            android:id="@+id/image_pos"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/image_bule_cricle" />

        <View
            android:layout_width="1dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#dadada" />

    </LinearLayout>

    <LinearLayout
        android:background="@drawable/fast_msg_item_bg"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:id="@+id/card_fast_msg"
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="13dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<TextView-->
                <!--android:id="@+id/text_msg_type"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="22dp"-->
                <!--android:background="@drawable/common_blue_msg_bg"-->
                <!--android:gravity="center"-->
                <!--android:paddingLeft="7dp"-->
                <!--android:paddingRight="7dp"-->
                <!--android:textColor="@color/white"-->
                <!--android:textSize="11sp" />-->

                <TextView
                    android:id="@+id/text_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/icon_fastmsg_history"
                    android:drawablePadding="6dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="11sp" />

                <LinearLayout
                    android:id="@+id/ll_red_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/icon_fastmsg_red_fire" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon_fastmsg_red_fire" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/image_orange_fire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_fastmsg_orange_fire"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:lineSpacingMultiplier="1.2"
                android:id="@+id/text_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:alpha="0.8"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/text_view_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="5dp"
                        android:paddingBottom="8dp"
                        android:paddingTop="6dp"
                        android:src="@drawable/icon_view_article"
                        android:visibility="gone" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/image_share_ll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingBottom="16dp"
                        android:paddingTop="16dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_fastmsg_share" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>





