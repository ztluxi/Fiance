<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="horizontal"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="10dp"
    android:id="@+id/my_mogul_item_rl">


    <ImageView
        android:layout_marginTop="16dp"
        android:layout_alignParentLeft="true"
        android:id="@+id/mogul_image_iv"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/follow"
         />
        <TextView
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/mogul_image_iv"
            android:lines="1"
            android:maxLength="20"
            android:textSize="14sp"
            android:id="@+id/my_mogul_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大佬"
            android:textColor="@color/tint_home_color"
            />

        <TextView
            android:layout_marginLeft="14dp"
            android:layout_toRightOf="@+id/mogul_image_iv"
            android:layout_below="@+id/my_mogul_name"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:id="@+id/my_mogul_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017-07-12"
            android:textColor="@color/about_font"
             />

    <TextView
        android:maxLength="15"
        android:maxLines="1"
        android:id="@+id/mogul_weibo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/my_mogul_name"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp"
        android:layout_toEndOf="@+id/my_mogul_name"
        android:layout_toRightOf="@+id/my_mogul_name"
        android:text="@string/aite_weibo"
        android:textColor="@color/about_font"
        android:textSize="11sp" />

    <TextView
        android:maxLength="35"
        android:maxLines="2"
        android:layout_below="@+id/mogul_image_iv"
        android:layout_marginTop="5dp"
        android:textSize="14sp"
        android:id="@+id/mogul_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="比特币这东西，早买晚买都是买的！"
        android:textColor="@color/colorBlack"
        />


    <TextView
        android:background="@drawable/feedback_bg"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textSize="11sp"
        android:id="@+id/mogul_position_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="未来财经ceo"
        android:textColor="@color/tint_home_color"
        />
    <TextView
        android:padding="5dp"
        android:background="@color/base_bg_color"
        android:layout_below="@+id/mogul_content_tv"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:textSize="11sp"
        android:id="@+id/mogul_content_translate_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="继续前进"
        android:textColor="@color/colorBlack"
        />

    <ImageView
        android:src="@drawable/mogul_center_bg"
        android:padding="5dp"
        android:background="@color/base_bg_color"
        android:layout_below="@+id/mogul_content_translate_tv"
        android:layout_marginRight="15dp"
        android:layout_marginTop="13dp"
        android:textSize="11sp"
        android:id="@+id/mogul_content_Image_tv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="继续前进"
        android:textColor="@color/colorBlack"
        android:layout_marginBottom="13dp"
        />

    <TextView
        android:id="@+id/line_tv"
        android:layout_below="@+id/mogul_content_Image_tv"
        style="@style/user_list_line_horizontal"
        />

    <ImageView
        android:padding="5dp"
        android:background="@drawable/fabulous_sel"
        android:layout_below="@+id/line_tv"
        android:layout_marginTop="15dp"
        android:textSize="11sp"
        android:layout_marginLeft="35dp"
        android:id="@+id/mogul_fabulous_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:text="2020"
        android:layout_toRightOf="@+id/mogul_fabulous_tv"
        android:padding="5dp"
        android:layout_below="@+id/line_tv"
        android:layout_marginTop="15dp"
        android:textSize="11sp"
        android:id="@+id/mogul_fabulous_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        />

    <ImageView
        android:layout_toLeftOf="@+id/mogul_share_tv"
        android:padding="5dp"
        android:src="@drawable/share"
        android:layout_below="@+id/line_tv"
        android:layout_marginTop="15dp"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/mogul_share_tv"
        android:layout_alignParentRight="true"
        android:layout_marginRight="35dp"
        android:text="分享"
        android:padding="5dp"
        android:layout_below="@+id/line_tv"
        android:textSize="11sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/about_font"
        />
</RelativeLayout>
